mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)
        .videoPlayer__controls
            .videoPlayer__column
                div#jsPlayBtn
                    i.fas.fa-play
                div#jsVolumnBtn.volumnBtn
                    i.fas.fa-volume-up
                div.videoPlayer__column__time
                    |00:00 / 10:00
            .videoPlayer__column
                div#jsExpandBtn
                    i.fas.fa-expand